<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="android:Theme.Material">
    </style>

    <style name="AppTheme_red" parent="android:Theme.Material">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="AppTheme_blue" parent="android:Theme.Material">
        <item name="android:colorPrimary">@color/primary_blue</item>
        <item name="android:colorPrimaryDark">@color/primary_dark_blue</item>
        <item name="android:colorAccent">@color/accent_blue</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="AppTheme_green" parent="android:Theme.Material">
        <item name="android:colorPrimary">@color/primary_green</item>
        <item name="android:colorPrimaryDark">@color/primary_dark_green</item>
        <item name="android:colorAccent">@color/accent_green</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle" >
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>
