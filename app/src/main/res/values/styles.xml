<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo">

        <item name="android:actionBarStyle">@style/RedActionBar</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="RedActionBar" parent="android:Widget.Holo.ActionBar">
        <item name="android:background">@color/primary</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle" >
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <color name="primary">#ffd44933</color>
    <color name="materialBg">#ff414141</color>
    <color name="accent">#ff547fce</color>

</resources>
